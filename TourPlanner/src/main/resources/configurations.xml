<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<!-- config with hikari in mind -->
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.provider_class">com.zaxxer.hikari.hibernate.HikariConnectionProvider</property>
        <property name="hibernate.hikari.dataSourceClassName">org.postgresql.ds.PGSimpleDataSource</property>
        <property name="hibernate.hikari.dataSource.user">tourplanner_admin</property>
        <property name="hibernate.hikari.dataSource.password">tourplanner123</property>
        <property name="hibernate.hikari.dataSource.databaseName">tourplanner</property>
        <property name="hibernate.hikari.dataSource.portNumber">5432</property>
        <property name="hibernate.hikari.dataSource.serverName">localhost</property>
        
        <!-- custom key property -->
        <property name="api.key">0ciJA4jyfcyvaC3eIYj7OCVOlhW3O5rn</property>
    </session-factory>
</hibernate-configuration>