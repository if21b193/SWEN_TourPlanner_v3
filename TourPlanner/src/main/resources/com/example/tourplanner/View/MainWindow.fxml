<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tourplanner.UI.View.MainWindowController" stylesheets="@stylesheets/hboxStylesheet.css">
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="hbox">
            <fx:include fx:id="exportButton" source="TourCSVExport.fxml" />
            <fx:include fx:id="importButton" source="TourCSVImport.fxml" />
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.3" prefHeight="500.0" prefWidth="600.0">
            <items>
                <fx:include fx:id="TourList" source="TourList.fxml"/>
                <fx:include fx:id="details" source="details.fxml" />
            </items>
        </SplitPane>
    </center>
</BorderPane>
